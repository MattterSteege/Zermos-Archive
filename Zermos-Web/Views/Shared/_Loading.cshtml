<style id="style">

    #content {
        width: 100%;
        height: 100%;
    }

    .loader-text {
      left: 50%;
      top: 45%;
      position: absolute;
      transform: translate(-45%, -50%);
    }
    
    .loading-dots {
      display: inline-block;
      width: 20px;
      height: 20px;
      border-radius: 50%;
      background: var(--active-color);
      animation: loading-dots 1.5s infinite ease-in-out;
      transform: scale(0);
    }
    
    .loading-dots:nth-child(2) {
      animation-delay: .2s;
    }
    
    .loading-dots:nth-child(3) {
      animation-delay: .4s;
    }
    
    @@keyframes loading-dots {
      0% {
        transform: scale(0);
      }
      50% {
        transform: scale(1);
      }
      100% {
        transform: scale(0);
      }
    }
    
    .loader-text {
      font-size: 20px;
      font-weight: 600;
      color: var(--text-color);
    }
    
    .loader-text .loading-dots {
      margin: 0 2px;
    }
    
    .loading-dots-container {
      position: absolute;
      left: 50%;
      top: 50%;
      transform: translate(-50%, -50%);
    }   
    
    #main {
      opacity: 0;
      animation: fade-in 0.25s ease-in-out forwards;
    }
    
    @@keyframes fade-in {
      0% {
        opacity: 0;
      }
      100% {
        opacity: 1;
      }
    }
    
    @@media only screen and (max-width: 700px) {
      .loader-text {
        display: none;
      }
    }

  
</style>

<div id="content">
    <div class="loader-text">
        @(ViewData["laad_tekst"] ?? Context.Items["laad_tekst"] ?? "De pagina wordt geladen")
    </div>
    <div class="loading-dots-container">
        <div class="loading-dots"></div>
        <div class="loading-dots"></div>
        <div class="loading-dots"></div>
    </div>
</div>

@section Scripts
{
<script>
    $(function () {
            
      const urlParams = new URLSearchParams(window.location.search);
     
      if("@(ViewData["url"] ?? Context.Items["url"])" === "") { return; }

        $.ajax({
            url: urlParams.get('url'),
            success: function (data) { 
              
              //make the #content fade out in 250ms
              $("#content").fadeOut(250, function () { 
              
                //wait 250ms and then replace the content with the new content            
                var newDoc = document.open("text/html", "replace");
                //set faded out
                //set the new content
                newDoc.write(data);
                
                //append the opactiy style to the new content
                var style = document.createElement('style');
                style.type = 'text/css';
                
                //set the opacity to 0
                style.innerHTML = "#main { opacity: 0; animation: fade-in .25s ease-in-out forwards; }  @@keyframes fade-in { 0% { opacity: 0; } 100% { opacity: 1; } }";
                newDoc.head.appendChild(style);
                                  
                newDoc.close();
                
                $("#main").fadeIn(250);
              });

            },
            //when an error happens, alert the user with the text of the error
            error: function (xhr, status, error) { 
              alert(xhr.responseText);
              window.location.href = "/";
              
             },
            cache: false,
            type: 'GET'
        });
    });
</script>
}