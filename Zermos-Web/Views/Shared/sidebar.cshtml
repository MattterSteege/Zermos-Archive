@using System.Security.Claims
@{
bool isZermeloGekoppeld = (bool) ViewData["isZermeloGekoppeld"];
bool isInfowijsGekoppeld = (bool) ViewData["isInfowijsGekoppeld"];
bool isSomtodayGekoppeld = (bool) ViewData["isSomtodayGekoppeld"];
bool prefersSomtodayRooster = (bool) ViewData["prefersSomtodayRooster"];
bool forceShow = (bool) (ViewData["forceShow"] ?? "false");
}

<div class="top">
    <svg viewBox="0 0 700 200" aria-labelledby="zermosTitle">
        <title id="zermosTitle">ZERMOS Logo</title>
        <text class="svgText" x="100" y="100">Z</text>
        <text class="svgText" x="200" y="100">E</text>
        <text class="svgText" x="300" y="100">R</text>
        <text class="svgText" x="400" y="100">M</text>
        <text class="svgText" x="500" y="100">O</text>
        <text class="svgText" x="600" y="100">S</text>
    </svg>
</div>

<div class="divider" role="separator" aria-hidden="true"></div>

<div class="bottom">
    <ul>

        @if(User.Identity != null && (!isInfowijsGekoppeld && !isZermeloGekoppeld && !isSomtodayGekoppeld) && User.Identity.IsAuthenticated)
        {
        <li id="koppelingen">
            <a onclick="ReplacePage('@Url.Action("Index", "Koppelingen")')" aria-label="Koppeling toevoegen" tabindex="0">
                <div class="menu-item" role="button">
                    <i class="fa-solid fa-plus menu-icons fa-fw" aria-hidden="true"></i>
                    <p>Koppeling toevoegen...</p>
                </div>
            </a>
        </li>
        }
        else if (User.Identity == null || !User.Identity.IsAuthenticated)
        {
        <li id="inloggen">
            <a onclick="ReplacePage('@Url.Action("Login", "Authentication")')" aria-label="Inloggen" tabindex="1">
                <div class="menu-item" role="button">
                    <i class="fa-solid fa-sign-in menu-icons fa-fw" aria-hidden="true"></i>
                    <p>Inloggen</p>
                </div>
            </a>
        </li>
        }

        @if ((isZermeloGekoppeld && !prefersSomtodayRooster) || forceShow)
        {
        <h5 class="Heading">Zermelo</h5>

        <li id="rooster">
            <a onclick="ReplacePage('@Url.Action("Rooster", "Zermelo")')" aria-label="Rooster via Zermelo" tabindex="2">
                <div class="menu-item" role="button">
                    <i class="fa-solid fa-calendar-day menu-icons fa-fw"></i>
                    <p>Rooster</p>
                </div>
            </a>
        </li>
        }

        @if (isSomtodayGekoppeld || forceShow)
        {
        <h5 class="Heading">SOMtoday</h5>

        @if ((prefersSomtodayRooster && !forceShow) || !isZermeloGekoppeld)
        {
        <li id="rooster">
            <a onclick="ReplacePage('@Url.Action("Rooster", "Somtoday")')" aria-label="Rooster via SOMtoday" tabindex="3">
                <div class="menu-item" role="button">
                    <i class="fa-solid fa-calendar-day menu-icons fa-fw"></i>
                    <p>Rooster</p>
                </div>
            </a>
        </li>
        }

        <li id="huiswerk">
            <a onclick="ReplacePage('@Url.Action("Huiswerk", "Somtoday")')" aria-label="Huiswerk" tabindex="4">
                <div class="menu-item" role="button">
                    <i class="fa-solid fa-pen-to-square menu-icons fa-fw"></i>
                    <p>Huiswerk</p>
                </div>
            </a>
        </li>

        <li id="cijfers">
            <a onclick="ReplacePage('@Url.Action("Cijfers", "Somtoday")')" aria-label="Cijfers" tabindex="5">
                <div class="menu-item" role="button">
                    <i class="fa-solid fa-line-chart menu-icons fa-fw"></i>
                    <p>Cijfers</p>
                </div>
            </a>
        </li>

        <li id="leermiddelen">
            <a onclick="ReplacePage('@Url.Action("Leermiddelen", "Somtoday")')" aria-label="Leermiddelen" tabindex="6">
                <div class="menu-item" role="button">
                    <i class="fa-solid fa-book menu-icons fa-fw"></i>
                    <p>Leermiddelen</p>
                </div>
            </a>
        </li>
        }

        @if ((User.FindFirstValue("email") ?? "").Contains("ccg-leerling.nl"))
        {
        <h5 class="Heading">School</h5>

        <li id="informatiebord">
            <a onclick="ReplacePage('@Url.Action("Informatiebord", "School")')" aria-label="Informatiebord" tabindex="7">
                <div class="menu-item" role="button">
                    <i class="fa-solid fa-info-circle menu-icons fa-fw"></i>
                    <p>Informatiebord</p>
                </div>
            </a>
        </li>

        <li id="printen">
            <a onclick="ReplacePage('@Url.Action("Printen", "School")')" aria-label="Printen" tabindex="8">
                <div class="menu-item" role="button">
                    <i class="fa-solid fa-print menu-icons fa-fw"></i>
                    <p>Printen</p>
                </div>
            </a>
        </li>
        }

        @if (isInfowijsGekoppeld || forceShow)
        {
        <h5 class="Heading">Infowijs</h5>

        <li id="schoolnieuws">
            <a onclick="ReplacePage('@Url.Action("Schoolnieuws", "Infowijs")')" aria-label="Schoolnieuws" tabindex="9">
                <div class="menu-item" role="button">
                    <i class="fa-solid fa-newspaper menu-icons fa-fw"></i>
                    <p>Schoolnieuws</p>
                </div>
            </a>
        </li>

        <li id="schoolkalender">
            <a onclick="ReplacePage('@Url.Action("Schoolkalender", "Infowijs")')" aria-label="Schoolkalender" tabindex="10">
                <div class="menu-item" role="button">
                    <i class="fa-solid fa-calendar-days menu-icons fa-fw"></i>
                    <p>Schoolkalender</p>
                </div>
            </a>
        </li>
        }

        <li style="display: none" class="hidden-account" id="account-2">
            <a onclick="ReplacePage('@Url.Action("Account", "Account")')" aria-label="Account" tabindex="11">
                <div class="menu-item" role="button">
                    <i class="fa-solid fa-user menu-icons fa-fw"></i>
                </div>
            </a>
        </li>

        <div class="spacer"></div>
    </ul>
</div>
<div class="docs">
    <img class="docs-image background-tint" aria-hidden="true" />
    <h4>Hulp nodig?</h4>
    <p>Check hoe je Zermos kunt gebruiken</p>
    <a href="https://zermos-docs.kronk.tech" tabindex="12">Bekijk de documentatie</a>
</div>
