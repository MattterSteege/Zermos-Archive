@model int

@{
    ViewBag.Title = "title";
    Layout = "_Layout";

    //whem the model is 0, show the login page

    //when model is 11, say that the email for logging in is send
    //when model is 12, say that the email for creating an account is send
    //when model is 13, say that you logged in succesfully

    //when model is 21, say that the user in not found
    //when model is 22, say that the verification code is expired
    //when model is 23, say that the verification code is wrong
    //when model is 24, say that the user is already verified
    //when model is 3, say that the error is unknown

//TODO: add the corresponding css file with `ViewData["add_css"] = "account";`

}
@if (Model == 0)
{
    <div class="login">
        <div class="login-child">
            <p class="child">Zermos gebruikt alleen je schoolmail!</p>
            <p class="child">Nadat je je e-mailadres hebt ingevuld en op 'Inloggen' hebt geklikt, ontvang je een e-mail met een link om in te loggen. Als je nog geen account hebt, ontvang je een e-mail om een account aan te maken. Super simpel!</p>
        </div>
        <form method="post" asp-action="Login" asp-controller="Account" class="form-control">
            <input type="text" name="email" placeholder="vul je schoolemail in">
            <input type="submit" value="Inloggen">
        </form>
    </div>
}

@if (Model == 11)
{
    <div class="login">
        <div class="login-child">
            <p class="child">Welkom terug!</p>
            <p class="child">Er is een e-mail gestuurd naar [email] met een link om in te loggen. Controleer je inbox, en klik op de link om direct toegang te krijgen. Als je de e-mail niet binnen enkele minuten ziet, controleer dan je spam map.</p>
        </div>
    </div>
}

@if (Model == 12)
{
    <div class="login">
        <div class="login-child">
            <p class="child">Welkom bij Zermos!</p>
            <p class="child">Geweldig! We hebben zojuist een e-mail verzonden naar [email] met de link om een account aan te maken. Ga snel naar je inbox om de e-mail te vinden. Als je de e-mail niet binnen enkele minuten ziet, controleer dan je spam map.</p>
        </div>
    </div>
}

@if (Model == 13)
{
    <div class="login">
        <div class="login-child">
            <p class="child">Succes!</p>
            <p class="child">Je bent succesvol ingelogd op je account. Welkom terug, [email]! Je hebt nu volledige toegang tot alle functies en mogelijkheden, mits je ze gekoppeld heb.</p>
        </div>
    </div>
}

@if (Model == 21)
{
    <div class="checkout">
        <div class="child1 child">Deze gebruiker is niet gevonden</div>
    </div>
}

@if (Model == 22)
{
    <div class="checkout">
        <div class="child1 child">Deze verificatie code is verlopen</div>
    </div>
}

@if (Model == 23)
{
    <div class="checkout">
        <div class="child1 child">Deze verificatie code is niet geldig</div>
    </div>
}

@if (Model == 24)
{
    <div class="checkout">
        <div class="child1 child">Deze gebruiker is al geverifieerd</div>
    </div>
}

@if (Model == 3)
{
    <div class="checkout">
        <div class="child1 child">Deze gebruiker is al geverifieerd</div>
    </div>
}