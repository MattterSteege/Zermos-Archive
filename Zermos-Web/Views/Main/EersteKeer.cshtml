@model object

<link rel="stylesheet" href="/css/main.css">
<script src="js/Zermos-tour.min.js"></script>

<div id="start" class="start" onclick="startingAnimation()">
    Start!
</div>

<div id="zermos">
    ZERMOS
</div>

<script minimize>
@Context.Items["dmjs"]

function startingAnimation() {
    //add animate class to start
    document.getElementById("start").classList.add("animate");
    document.getElementById("zermos").classList.add("animate");
    setTimeout(() => {
        newSidebar();
        ReplacePage('/koppelingen');
    }, 3000);
}

