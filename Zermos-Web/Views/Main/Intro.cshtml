@model dynamic

<div id="intro-page" class="intro-container">
  <div class="intro-card">
    <div id="intro-icon" class="intro-icon">📍</div>
    <h2 id="intro-title" class="intro-title">Track All Cards</h2>
    <p id="intro-description" class="intro-description">Track all credit cards and bank accounts in one place</p>
    <div class="intro-navigation">
      <button id="prev-btn" class="nav-btn">&lt;</button>
      <div id="page-indicators" class="page-indicators"></div>
      <button id="next-btn" class="nav-btn">&gt;</button>
    </div>
  </div>
</div>

<style>
  .intro-container {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
    width: 100%;
  }

  .intro-card {
    background-color: var(--overlay-color);
    border-radius: var(--border-radius);
    padding: var(--padding);
    text-align: center;
    box-shadow: var(--box-shadow);
    max-width: 500px;
    width: 80%;
    height: 80%;
    max-height: 500px;
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .intro-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
    width: 40%;
    max-width: 100px;
  }

  .intro-icon svg {
    width: 100%;
  }

  .intro-title {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
  }

  .intro-description {
    color: var(--text-color);
    margin-bottom: 1.5rem;
  }

  .intro-navigation {
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: absolute;
    width: calc(100% - 2* var(--padding));
    bottom: var(--padding);
  }

  .nav-btn {
    background-color: var(--background-color);
    border: none;
    border-radius: 50%;
    width: 30px;
    height: 30px;
    font-size: 1rem;
    cursor: pointer;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .nav-btn:hover {
    background-color: var(--inactive-color);
  }

  .page-indicators {
    display: flex;
    gap: 0.5rem;
  }

  .indicator {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background-color: var(--text-color);
  }

  .button {
    width: 100%;
    height: calc(1.5* var(--button-height));
    background: var(--accent-color);
    border: none;
    color: var(--white-color);
    border-radius: var(--border-radius);
    margin-top: 50px;
  }
</style>

