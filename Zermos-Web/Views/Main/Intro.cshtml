    {
      icon: '<svg width="200" height="200" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 132 197" style="enable-background:new 0 0 806.1 197" xml:space="preserve"><path fill="#6AC4CA" d="m125.5 61.3.8-56.1v-.1c0-1.1-.9-2.1-2.1-2.1h-.1c-.4 0-.8.2-1.1.4l-.3.3v.1C107 21.7 96.5 23 81.1 23c-2.1 0-4.2 0-6.5-.1-2.5 0-5.2-.1-8-.1-4.4 0-8.4.2-11.9.3-3.1.1-6 .2-8.7.2-13.2 0-22.6-2.8-37.1-18.1-.4-.3-1-.5-1.6-.5-.3 0-.5.1-.8.2-.8.3-1.3 1.1-1.3 2l2 56.3C5.8 66 5 69.2 5 72.4c0 3.2.8 6.4 2.3 9.3v23.7c0 18.1 8.8 35.4 24.6 48.7 15.2 12.7 35.1 20 54.6 20h36.9c1.2 0 2.1-.9 2.1-2.1V83.5c2.2-3.3 3.4-7.1 3.4-11.1s-1.1-7.8-3.4-11.1z"/><path fill="#FFF" d="M89 101.2c-8.8 0-16.6-3.9-21.9-10.1-5.3 6.2-13.1 10.1-21.9 10.1-15.9 0-28.8-12.9-28.8-28.8s12.9-28.8 28.8-28.8c8.8 0 16.6 3.9 21.9 10.1 5.3-6.2 13.1-10.1 21.9-10.1 15.9 0 28.8 12.9 28.8 28.8-.1 15.9-12.9 28.8-28.8 28.8z"/><path d="M45.1 60.2c-1.7 0-3.3.3-4.7.9 1 .8 1.6 2 1.6 3.3 0 2.4-1.9 4.3-4.3 4.3-1.5 0-2.7-.7-3.5-1.9-.8 1.7-1.3 3.5-1.3 5.5 0 6.7 5.5 12.2 12.2 12.2 6.8 0 12.2-5.5 12.2-12.2 0-6.7-5.4-12.1-12.2-12.1zM89 60.2c-1.9 0-3.7.4-5.3 1.2.8.8 1.3 1.9 1.3 3.1 0 2.4-1.9 4.3-4.3 4.3-1.1 0-2.2-.5-2.9-1.2-.6 1.5-1 3.1-1 4.8 0 6.7 5.5 12.2 12.2 12.2 6.7 0 12.2-5.5 12.2-12.2 0-6.8-5.5-12.2-12.2-12.2z"/><path fill="#EEC64A" d="m66.5 118.1-14.2-14.8c5.7-.6 10.8-3.1 14.7-7 3.9 3.9 9.1 6.4 15 7l-15.5 14.8z"/></svg>',
      title: 'Infowijs',
      description: 'Koppel Infowijs aan je Zermos account en krijg direct toegang tot de schoolkalender en het laatste schoolnieuws. Blijf op de hoogte van de planning en belangrijke updates, perfect gesynchroniseerd met de Antonius app. Mis nooit meer belangrijke informatie!'
    },
    {
      icon: '<svg width="200" height="200" viewBox="0 0 20 20"><text dominant-baseline="middle" text-anchor="middle" x="50%" y="50%">Z</text></svg>',
      title: 'Ben je er klaar voor?',
      description: 'Klik op inloggen om je account aan te maken en jouw avontuur te beginnen!<br><br><button class="button" onclick="ReplacePage(\'/Login\')">Inloggen</button>'
    }
  ];

  let currentPage = 0;

  const introIcon = document.getElementById('intro-icon');
  const introTitle = document.getElementById('intro-title');
  const introDescription = document.getElementById('intro-description');
  const prevBtn = document.getElementById('prev-btn');
  const nextBtn = document.getElementById('next-btn');
  const pageIndicators = document.getElementById('page-indicators');

  function updatePage() {
    const page = pages[currentPage];
    introIcon.innerHTML = page.icon;
    introTitle.textContent = page.title;
    introDescription.innerHTML = page.description;

    const indicators = pageIndicators.getElementsByClassName('indicator');
    for (let i = 0; i < indicators.length; i++) {
      indicators[i].classList.toggle('active', i === currentPage);
    }
  }

  function createPageIndicators() {
    for (let i = 0; i < pages.length; i++) {
      const indicator = document.createElement('div');
      indicator.classList.add('indicator');
      if (i === 0) indicator.classList.add('active');
      pageIndicators.appendChild(indicator);
    }
  }

  prevBtn.addEventListener('click', () => {
    currentPage = (currentPage - 1 + pages.length) % pages.length;
    updatePage();
  });

  nextBtn.addEventListener('click', () => {
    currentPage = (currentPage + 1) % pages.length;
    updatePage();
  });

  createPageIndicators();
  updatePage();
</script>