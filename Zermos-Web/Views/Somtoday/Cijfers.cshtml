<div class="grade-controls">
    <div id="togglePanel1" onclick="selectLine(1)">Rapport</div>
    <div id="togglePanel2" onclick="selectLine(2)">Examen</div>
    <div id="togglePanel3" onclick="selectLine(3)">Geschiedenis</div>
